# set recolor true
set recolor-keephue true
# bg: dark
set recolor-lightcolor "#5c6a72"
set recolor-darkcolor "#fdf6e3"
# bg: light
# set recolor-lightcolor "#fdf6e3"
# set recolor-darkcolor "#5c6a72"

set selection-clipboard clipboard

# simpler scrolling
# "j/k" scroll further
# map j navigate next
# map k navigate previous
map k scroll half-up
map j scroll half-down

# map <S-j> scroll down
map <S-j> zoom in
map <S-k> scroll up
